<%= form_with(model: customer_preference) do |form| %>
<% if customer_preference.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(customer_preference.errors.count, "error") %> prohibited this customer_preference from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% customer_preference.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :preferred_destination, class: label_class %>
          <%= form.text_field :preferred_destination, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :preferred_travel_date, class: label_class %>
          <%= form.date_field :preferred_travel_date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :user_id, class: label_class %>
          <%= form.text_field :user_id, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if customer_preference.persisted? %>
<%= link_to "Cancel", customer_preference, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", customer_preferences_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
