<%= form_with(model: vehicle) do |form| %>
<% if vehicle.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% vehicle.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :vehicle_type, class: label_class %>
          <%= form.select :vehicle_type, Vehicle.vehicle_types.keys.map { |type| [type.humanize, type] }, {}, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :capacity, class: label_class %>
          <%= form.number_field :capacity, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :model, class: label_class %>
          <%= form.text_field :model, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :registration_number, class: label_class %>
          <%= form.text_field :registration_number, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if vehicle.persisted? %>
<%= link_to "Cancel", vehicle, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", vehicles_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
